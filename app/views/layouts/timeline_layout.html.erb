<!DOCTYPE html>
<html>
<head>
<title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>


  <%= render 'layouts/shim' %>


   <!-- Load the Timeline library after reseting the fonts, etc -->
   <script src="http://api.simile-widgets.org/timeline/2.3.1/timeline-api.js" type="text/javascript"></script> 
 



   <script>        
        var tl;

     
        function onLoad() {
           

             var eventSource = new Timeline.DefaultEventSource();
    


            
            var theme1 = Timeline.ClassicTheme.create();
            theme1.autoWidth = true; // Set the Timeline's "width" automatically.
                                     // Set autoWidth on the Timeline's first band's theme,
                                     // will affect all bands.
            theme1.timeline_start = new Date(Date.UTC(1768, 0, 1));
            theme1.timeline_stop  = new Date(Date.UTC(1770, 0, 1));
              
      
              
            var d = Timeline.DateTime.parseGregorianDateTime("1768")
            
            var bandInfos = [
                Timeline.createBandInfo({
                    width:          45, // set to a minimum, autoWidth will then adjust
                    intervalUnit:   Timeline.DateTime.MONTH, 
                    intervalPixels: 200,
                    eventSource:    eventSource,
                    date:           d,
                    theme:          theme1,
                    layout:         'original'  // original, overview, detailed
                })
            ];
            
    


          var tl = Timeline.create(document.getElementById("my-timeline"), bandInfos);
   tl.loadJSON('http://localhost:3000/histories/<%= @history.id %>/jsonized', function(json, url) {
       eventSource.loadJSON(json, url);
   }); 

tl.layout();

          
      
      
        }
        
        var resizeTimerID = null;

        function onResize() {
          var tl;
            if (resizeTimerID == null) {
                resizeTimerID = window.setTimeout(function() {
                    resizeTimerID = null;
                    tl.layout();
                }, 500);
            }
        }

   </script>

</head>

<body onload="onLoad();" onresize="onResize();">
 <%= render 'layouts/header' %>
 <div class="container">
   <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
   <% end %>
  <%= yield %>
  <%= render 'layouts/footer' %>
  <%= debug(params) if Rails.env.development? %>
 </div>
</body>
</html>
