
<h1>Comparaison Chrono-généalogique</h1>

<% if @form %>


<h3>Données...</h3>
<ul>
<li>Chronologie selectionée (bleu) : <%= @history.title %></li>
<li> Fichier Gedcom parsé (rouge) : <%= @name %></li>
<li> Requète JSON  : <%= @request %></li>
</ul> 

<h3>Résultats comparés</h3>

<div id="doc3" class="yui-t7">
   <div id="hd" role="banner">
     <h1><%= @history.title %></h1>
     <p><%= @history.description %></p>
   </div>
   <div id="bd" role="main">

	   <div class="yui-g">
	     <div id='my-timeline'></div>
	     <p>To move the Timeline: use the mouse scroll wheel, the arrow keys or grab and drag the Timeline.</p>
	   </div> 
	   
	 </div>
   <div id="ft" role="contentinfo">
     <p>Thanks to the <a href=''>Simile Timeline project</a> Timeline version <span id='tl_ver'></span></p>
     <script>Timeline.writeVersion('tl_ver')</script> 
   </div>
</div>


<% else %> 

<%= form_tag genealogy_timeline_path, multipart: true, class: "nifty_form" do %>
  <%= file_field_tag :file %>
  <%= select_tag(:history_id, options_from_collection_for_select(History.where(approved: true), :id, :title))  %>
  <%= submit_tag "Import" , class: "btn btn-large btn-primary" %>
<% end %>


<% end %>
