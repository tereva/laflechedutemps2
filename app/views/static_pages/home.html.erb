      <tr>
        <th>Status</th>
        <th>Title</th>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>

  <% @histories_block_contrib.each do |histo| %>
      <tr>
        <td><%= histo.approved ? '[Approved]' : '[Not approved]'%></td> 
        <td><%= histo.title %>  (<%= histo.events.count %> évènements)</td>
        <td><%= link_to 'Show', histo %></td>
